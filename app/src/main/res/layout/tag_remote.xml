<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    >

    <android.widget.ImageView
        android:id="@+id/tagImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/tag_hires_green"
        android:src="@drawable/tag_hires_green"
        android:layout_alignTop="@id/tag"
        android:layout_alignBottom="@id/tag"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="4dp"
        />

    <TextView
        android:id="@+id/tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/hash_bg"
        android:padding="4dp"
        android:text="v1.0.0"
        android:textAllCaps="false"
        android:textColor="@color/appWhite"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/tagImage"
        android:layout_alignParentTop="true"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        />

    <RelativeLayout
        android:id="@+id/messageContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/appBlack"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tag"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text="Git Tag Signature"
            android:textAllCaps="true"
            android:textColor="@color/appGray"
            android:textSize="10sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:fontFamily="monospace"
            android:text="message"
            android:textAllCaps="false"
            android:textColor="@color/appWhite"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/header"
            android:maxLines="2"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="8dp"
            android:text="5m ago"
            android:textAllCaps="true"
            android:textColor="@color/appGray"
            android:textSize="10sp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/message"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/tagger"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="@string/exampleUserID"
        android:textColor="@color/appGreen"
        android:textStyle="bold"
        android:layout_below="@id/messageContainer"
        android:layout_toRightOf="@id/taggerLabel"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_alignParentRight="true"
        android:gravity="left"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        />
    <TextView
        android:id="@+id/taggerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:text="Tagger"
        android:textAllCaps="true"
        android:textColor="@color/appGray"
        android:textSize="10sp"
        android:layout_alignBottom="@id/tagger"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@id/tagger"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        />

    <TextView
        android:id="@+id/object"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:fontFamily="monospace"
        android:text="f21ec9de97e3ff0a66a068682a176020e91dcf29"
        android:textAllCaps="false"
        android:textColor="@color/appGray"
        android:textSize="11sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/taggerLabel"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tagger"
        android:gravity="left"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/objectLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Object"
        android:textAllCaps="true"
        android:textColor="@color/appGray"
        android:textSize="10sp"
        android:layout_alignTop="@id/object"
        android:layout_alignBottom="@id/object"
        android:layout_alignRight="@id/taggerLabel"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        />

    <TextView
        android:id="@+id/type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:fontFamily="monospace"
        android:text="commit"
        android:textColor="@color/appGray"
        android:textSize="11sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/taggerLabel"
        android:layout_alignParentRight="true"
        android:layout_below="@id/objectLabel"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/typeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:text="Type"
        android:textAllCaps="true"
        android:textColor="@color/appGray"
        android:textSize="10sp"
        android:layout_alignBottom="@id/type"
        android:layout_alignTop="@id/type"
        android:layout_alignRight="@id/taggerLabel"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        />

</RelativeLayout>